class Solution {
    public int maxSubArray(int[] nums) {
         int maxEnding = nums[0];
        int res = nums[0];

        for (int i = 1; i <nums.length; i++) {
            maxEnding = maxEnding + nums[i];

           
            if (maxEnding < nums[i]) { 
                maxEnding = nums[i];
            }

            if (res < maxEnding) {
                res = maxEnding;
            }
        }

        return res ;
    }
    
 }
